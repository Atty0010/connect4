<ConnectFour>:
  player_1_name:player_1_name
  player_2_name:player_2_name
  GridLayout:
    pos:0,root.height-self.height
    pos_hint:{}
    rows:3
    cols:2
    height:60
    cols_minimum:{0:110,1:120}
    row_default_height:30
    row_force_default:True
    Label:
      text: "Player 1 Name"
      font_size:"12sp"
    TextInput:
      multiline: False
      font_size:"14sp"
      id: player_1_name
    Label:
      text: "Player 2 Name"
      font_size:"12sp"
    TextInput:
      multiline: False
      font_size:"14sp"
      id: player_2_name
    Button:
      text: "Start Game"
      on_press:app.start_game()
  #
  Widget:
    size:root.width-235,root.height
    pos:235,0
    canvas:
      Color:
        rgb:25/255,71/255,117/255
      Rectangle:
        size:self.size
        pos:self.pos
  
